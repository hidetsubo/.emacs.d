# -*- coding: utf-8 -*-
require 'jpstock'

a=['8789','8836','9318','8927','3788']
a.each do |s|
  stock = JpStock.quote(:code=>s)
  p stock.company_name
  p stock.prev_close.to_s + ', ' + stock.close.to_s + ', '+ (stock.close.to_i - stock.prev_close.to_i).to_s
end

tdnet = JpStock.tdnet()
tdnet.each do |t|
  if t.gyouhai == true
    p t.company_name
    p t.title
    p t.url
    stock = JpStock.quote(:code=>t.code)
    p stock.code
    p stock.company_name
    p stock.prev_close.to_s + ', ' + stock.close.to_s + ', '+ (stock.close.to_i - stock.prev_close.to_i).to_s
  end
end
