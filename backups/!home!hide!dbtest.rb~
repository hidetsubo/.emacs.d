# -*- coding: utf-8 -*-
require 'rubygems'
require 'sqlite3'

db = SQLite3::Database.new("data.db")
sql = <<SQL
create table items(
  名前 varchar(10), 
  年齢 integer
  );
SQL
db.execute(sql)

sql = "insert into items values ('田中', 30)"
db.execute(sql)

db.execute('select * from items') do |row|
  puts row.join("\t")
end

db.close
